# ============================================================================
# DeX Trading Agent - Python Backend Configuration
# ============================================================================

# Application
APP_NAME="DeX Trading Agent"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, production
DEBUG=true

# Server
HOST="127.0.0.1"  # IMPORTANT: Bind to localhost only for security
PORT=8000

# Database (choose one)
# SQLite (recommended for local use)
DATABASE_URL="sqlite:///./dex_trading.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/dex_trading"

# Redis (for Celery background tasks)
REDIS_URL="redis://localhost:6379/0"

# CORS (Frontend URL)
CORS_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"

# ============================================================================
# Trading API Keys (Store securely - never commit!)
# ============================================================================

# Hyperliquid API
HYPERLIQUID_API_SECRET=""
HYPERLIQUID_WALLET_ADDRESS=""
HYPERLIQUID_TESTNET=false

# OpenRouter (for AI analysis)
OPENROUTER_API_KEY=""

# CryptoPanic (for news)
CRYPTOPANIC_AUTH_TOKEN=""

# ============================================================================
# Trading Configuration
# ============================================================================

# Default Settings
DEFAULT_LEVERAGE=5
DEFAULT_TAKE_PROFIT_PERCENT=5.0
DEFAULT_STOP_LOSS_PERCENT=2.0
MAX_POSITION_SIZE_PERCENT=20.0  # Max % of balance per trade

# AI Settings
DEFAULT_AI_MODEL="deepseek/deepseek-chat-v3-0324:free"
AI_ANALYSIS_INTERVAL_SECONDS=60  # How often to run AI analysis

# Paper Trading
PAPER_TRADING_INITIAL_BALANCE=10000.0

# ============================================================================
# Security
# ============================================================================

# JWT Secret (if implementing auth later)
# SECRET_KEY="your-secret-key-here-generate-with-openssl-rand-hex-32"
# ALGORITHM="HS256"
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/app.log"
